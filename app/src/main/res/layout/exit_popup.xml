<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_back_style">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you want to exit?"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:background="@color/green"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        >
        <ImageView
            android:id="@+id/dialog_no"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_delete_red"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circle_red_back"
            android:padding="8dp"
            android:contentDescription="No" />
        <ImageView
            android:id="@+id/dialog_yes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_accept_green"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_green_back"
            android:padding="8dp"
            android:contentDescription="Yes" />
    </RelativeLayout>


</LinearLayout>